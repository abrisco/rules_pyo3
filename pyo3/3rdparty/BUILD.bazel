load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@rules_rust//crate_universe:defs.bzl", "crate", "crates_vendor")

crates_vendor(
    name = "crates_vendor",
    annotations = {
        "pyo3-build-config": [
            crate.annotation(
                build_script_data = [
                    "@rules_pyo3//pyo3:current_pyo3_toolchain",
                ],
                build_script_env = {
                    "PYO3_CONFIG_FILE": "$${pwd}/$(PYO3_CONFIG_FILE)",
                    "PYO3_PYTHON": "$${pwd}/$(PYO3_PYTHON)",
                },
                build_script_toolchains = [
                    "@rules_pyo3//pyo3:current_pyo3_toolchain",
                ],
            ),
        ],
    },
    cargo_lockfile = "Cargo.Bazel.lock",
    mode = "remote",
    packages = {
        "pyo3": crate.spec(
            features = [
                "abi3",
                "extension-module",
            ],
            version = "0.21.0",
        ),
        "pyo3-ffi": crate.spec(
            version = "0.21.0",
        ),
        "pyo3-stub-gen": crate.spec(
            version = "0.6.0",
        ),
    },
    # Name is short to avoid windows paths being too long
    # https://github.com/bazelbuild/rules_rust/issues/1120
    repository_name = "rpyo3c",
    tags = ["manual"],
)

bzl_library(
    name = "bzl_lib",
    srcs = [
        "//pyo3/3rdparty/crates:crates.bzl",
        "//pyo3/3rdparty/crates:defs.bzl",
    ],
    visibility = ["//pyo3:__pkg__"],
)
